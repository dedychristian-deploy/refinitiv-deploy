<script>
function showAlert(msg, type) {
    const box = document.getElementById('alertBox');
    box.textContent = msg;
    box.className = 'alert alert-' + type;
    box.classList.remove('d-none');
    setTimeout(() => box.classList.add('d-none'), 4000);
}


async function loadUsers() {
  const res = await fetch('/api/users');
  const users = await res.json();
  const tbody = document.getElementById('userTableBody');
  tbody.innerHTML = '';
  users.forEach(user => {
    const tr = document.createElement('tr');
    tr.innerHTML = `
      <td>${user.id}</td>
      <td>${user.username}</td>
      <td>${user.role}</td>
      <td>${new Date(user.created_at).toLocaleString()}</td>
      <td>
          <div class="btn-group" role="group">
            <button class="btn btn-sm btn-warning" 
              onclick="openEdit('${user.id}','${user.username}','${user.role}')">Edit</button>
            <button class="btn btn-sm btn-danger" 
              onclick="openDeleteModal('${user.id}', '${user.username}')">Delete</button>
          </div>
        </td>`;
    tbody.appendChild(tr);
  });
}

function openEdit(id, username, role) {
  document.getElementById('editId').value = id;
  document.getElementById('editUsername').value = username;
  document.getElementById('editRole').value = role;
  document.getElementById('editPassword').value = '';
  $('#modalEditUser').modal('show');
}

//======= edit
document.getElementById('formEditUser').addEventListener('submit', async (e) => {
  e.preventDefault();

  const body = {
    id: document.getElementById('editId').value,
    username: document.getElementById('editUsername').value,
    password: document.getElementById('editPassword').value, // boleh kosong
    role: document.getElementById('editRole').value
  };

  const res = await fetch('/api/edit-user', {
    method: 'POST',
    headers: { 'Content-Type': 'application/json' },
    body: JSON.stringify(body)
  });

  const result = await res.json();
  if (result.success) {
    $('#modalEditUser').modal('hide');
    showAlert('✏️ User berhasil diupdate', 'success');
    await loadUsers();
  } else {
    showAlert(result.message || '❌ Gagal update user', 'danger');
  }
});


//======= adds
document.getElementById('formAddUser').addEventListener('submit', async (e) => {
  e.preventDefault();
