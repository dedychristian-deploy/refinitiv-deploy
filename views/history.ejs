<script>
  let chart = null;
  let timerSummaryTable = null; // global
  let timerChart = null;        // global

  function getRicFromURL() {
    const params = new URLSearchParams(window.location.search);
    return params.get('code_b') || '.JKSE'; // default ke JKSE
  }

  function setRicInURL(code_b) {
    const url = new URL(window.location.href);
    url.searchParams.set('code_b', code_b);
    window.history.pushState({}, '', url);
  }

  async function loadSummary(ric) {
    try {
      const res = await fetch(`/api/summary/${ric}`);
      const data = await res.json();
      const name = data.stockname || ric;

      document.getElementById('customName').textContent = data.stockname || '-';
      document.getElementById('lastPrice').textContent = data.last_price ?? '-';
      document.getElementById('change').textContent = data.net_change ?? '-';
      document.getElementById('changePct').textContent = data.pct_change ? `${data.pct_change}%` : '-';

      if (chart) {
        chart.data.datasets[0].label = name;
        chart.update();
      }
    } catch (e) {
      console.warn('Summary load failed', e);
    }
  }

  async function loadChart(ric) {
    try {
      const res = await fetch(`/api/history/${ric}`);
      const data = await res.json();

      const labels = data.map(x => new Date(x.ts).toLocaleTimeString());
      const values = data.map(x => x.price);

      if (!chart) {
        const ctx = document.getElementById('historyChart').getContext('2d');
        chart = new Chart(ctx, {
          type: 'line',
          data: {
            labels,
            datasets: [{
              label: document.getElementById('customName').textContent,
              data: values,
              borderColor: '#4da6ff',
              backgroundColor: 'rgba(77,166,255,0.2)',
              fill: true,
              tension: 0.1
            }]
          },
          options: {
            maintainAspectRatio: false,
            responsive: true,
            scales: {
              x: { ticks: { color: '#333' } },
              y: { ticks: { color: '#333' } }
            }
          }
        });
      } else {
        chart.data.labels = labels;
        chart.data.datasets[0].data = values;
        chart.update();
      }
    } catch (e) {
      console.warn('Chart load failed', e);
    }
  }

  async function loadTable(ric) {
    try {
      const res = await fetch(`/api/history-table/${ric}`);
      const data = await res.json();
      const tbody = document.getElementById('historyTableBody');
      tbody.innerHTML = '';

      if (data.length === 0) {
        tbody.innerHTML = `<tr><td colspan="5" class="text-center text-muted">No data</td></tr>`;
        return;
      }

      data.forEach((row, i) => {
        const tr = document.createElement('tr');
        tr.innerHTML = `
          <td>${i + 1}</td>
          <td>${row.stockname}</td>
          <td>${row.price}</td>
          <td>${row.volume}</td>
          <td>${new Date(row.ts).toLocaleString()}</td>
        `;
        tbody.appendChild(tr);
      });
    } catch (err) {
      console.error('Load table failed', err);
    }
  }

  function onSearch() {
    const ric = document.getElementById('ricInput').value.trim();
    if (!ric) return;

    setRicInURL(ric);
    loadSummary(ric);
    loadChart(ric);
    loadTable(ric);

    // üõë Clear dulu semua timer lama
    if (timerSummaryTable) {
      clearInterval(timerSummaryTable);
      timerSummaryTable = null;
    }
    if (timerChart) {
      clearInterval(timerChart);
      timerChart = null;
    }

    // ‚è±Ô∏è Summary & Table ‚Üí update tiap 2 detik
    timerSummaryTable = setInterval(() => {
      loadSummary(ric);
      loadTable(ric);
    }, 2000);

    // ‚è±Ô∏è Chart ‚Üí update tiap 1 menit
    timerChart = setInterval(() => {
      loadChart(ric);
    }, 60000);
  }

  function handleKeyPress(event) {
    if (event.key === "Enter") {
      onSearch();
    }
  }

  document.addEventListener('DOMContentLoaded', () => {
    const initialRIC = getRicFromURL();
    document.getElementById('ricInput').value = initialRIC || '';
    onSearch();
  });
</script>

